<%= form_with(model: course) do |f| %>
  <div class="field">
    <%= f.label :Name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Price %>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :Intro %>
    <%= f.text_area :intro %>
  </div>
  <div class="field">
    <%= f.label :Hour %>
    <%= f.number_field :hour %>
  </div>
  <div class="action">
    <%= f.submit btn_label %>
  </div>
  
  <% end %>


