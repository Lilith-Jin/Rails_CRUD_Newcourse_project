<h1>Courses list</h1>

<%= link_to 'Add Course', new_course_path %>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Price</td>
      <td>Intro</td>
      <td>Hour</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do|course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.price %></td>
      <td><%= course.intro %></td>
      <td><%= course.hour%></td>
      <td><%= link_to "Update", edit_course_path(course) %></td>
      <td><%= link_to "delete", course_path(course), method: "delete", data:{confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>